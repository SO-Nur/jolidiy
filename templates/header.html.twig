<div class="lh-1 py-3">
    <div class="container">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 text-start">
                <a class="blog-header-logo text-decoration-none" href="{{ path('app_home') }}">| Joli DIY |</a>
            </div>

            <div class="col-4 nav-scroller">
                <nav class="nav nav-underline justify-content-evenly">
                    <a class="nav-item nav-link" href="{{ path('app_home') }}">Accueil</a>
                    <a class="nav-item nav-link" href="{{ path('app_home') }}">Catégories</a>
                    <a class="nav-item nav-link" href="{{ path('app_home') }}">Tutoriels</a>
                    <a class="nav-item nav-link" href="{{ path('app_home') }}">À propos</a>
                </nav>
            </div>

            <div class="col-4 d-flex justify-content-end">
                {% if app.user%}
                    <a class="btn btn-sm btn-outline-primary px-3 mx-2 rounded-pill" href="{{ path('admin') }}">Tableau de bord</a>
                {% endif %}
                {% if app.user is null %}
                    <a class="btn btn-sm btn-outline-primary px-3 rounded-pill" href="{{ path('app_login') }}">Connnexion</a>
                {% endif %}
                {% if app.user%}
                    <a class="btn btn-sm btn-secondary px-3 rounded-pill" href="{{ path('app_logout') }}">Déconnnexion</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}S'inscrire{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body style="background-color: #DFD3C3;">
    {% block body %}
         <section class="vh-100 mt-5">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="https://cdn.pixabay.com/photo/2020/04/18/15/48/telework-5059653_1280.png"
                             class="img-fluid rounded-start-5" alt="laptop illustration">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                            <h1 class="mb-5">Inscription</h1>

                            {% for flash_error in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                            {{ form_errors(registrationForm) }}

                            {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.firstname, {
                                label: 'Prénom'
                            })  }}
                            {{ form_row(registrationForm.lastname, {
                                label: 'Nom'
                            }) }}
                            {{ form_row(registrationForm.username, {
                                label: 'Pseudo'
                            }) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                            {{ form_row(registrationForm.agreeTerms) }}

                            <div class="text-center text-lg-start mt-4 pt-2">
                                <button type="submit" class="btn btn-dark btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;">Créer un compte</button>
                            </div>
                            {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}
</body>
</html>



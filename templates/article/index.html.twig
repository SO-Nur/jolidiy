{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="card mb-3 col-md-8 border-0">
                <img src="/uploads/{{ article.featuredImage.file }}"
                     class="card-img-top h-25" alt="{{ article.featuredImage.altText }}">
                <div class="card-body">
                    <h1 class="card-title h1 text-primary">
                        <strong>{{ article.title }}</strong>
                    </h1>
                    <p class="card-text">
                        <small class="text-body-secondary">
                            {{ article.createdAt|date('d M Y') }} par
                        </small>
                        <small class="text-secondary">
                            {{ article.user.firstname }}
                        </small>
                    </p>
                    <p class="card-text">
                        {{article.content|raw }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

